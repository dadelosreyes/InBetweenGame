<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Popup">


    <TextView
            android:id="@+id/txtBet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:fontFamily="cursive"
            android:textSize="36sp"
            android:textColor="@color/white"
            app:layout_constraintEnd_toStartOf="@+id/bet100"
            app:layout_constraintStart_toEndOf="@+id/bet50"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="60dp"/>
    <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/bet25"
            android:background="@drawable/chip25"
            app:layout_constraintStart_toEndOf="@+id/bet10"
            app:layout_constraintEnd_toStartOf="@+id/bet50"
            app:layout_constraintTop_toTopOf="@+id/bet50"
            app:layout_constraintBottom_toBottomOf="@+id/bet50"/>
    <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/betAll"
            android:background="@drawable/chip_all"
            app:layout_constraintStart_toEndOf="@+id/bet500"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtBet"
            android:layout_marginTop="36dp"/>
    <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/bet500"
            android:background="@drawable/chip500"
            app:layout_constraintStart_toEndOf="@+id/bet100"
            app:layout_constraintEnd_toStartOf="@+id/betAll"
            app:layout_constraintTop_toTopOf="@+id/betAll"
            app:layout_constraintBottom_toBottomOf="@+id/betAll"/>
    <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/bet100"
            android:background="@drawable/chip100"
            app:layout_constraintStart_toEndOf="@+id/bet50"
            app:layout_constraintEnd_toStartOf="@+id/bet500"
            app:layout_constraintTop_toTopOf="@+id/bet500"
            app:layout_constraintBottom_toBottomOf="@+id/bet500"/>
    <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/bet50"
            android:background="@drawable/chip50"
            app:layout_constraintStart_toEndOf="@+id/bet25"
            app:layout_constraintEnd_toStartOf="@+id/bet100"
            app:layout_constraintTop_toTopOf="@+id/bet100"
            app:layout_constraintBottom_toBottomOf="@+id/bet100"/>
    <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/bet10"
            android:background="@drawable/chip10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/bet25"
            app:layout_constraintTop_toTopOf="@+id/bet25"
            app:layout_constraintBottom_toBottomOf="@+id/bet25"
    />
    <Button
            android:id="@+id/set"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/ic_bet"
            android:text="Set Bet"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/bet100"
            android:layout_marginTop="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="300dp"
            app:layout_constraintStart_toEndOf="@+id/clear"
            android:layout_marginStart="44dp"
            android:fontFamily="@font/bernard_mt_condensed"/>
    <Button
            android:id="@+id/clear"
            android:textColor="@color/white"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/ic_fold"
            android:text="Clear"
            app:layout_constraintTop_toBottomOf="@+id/bet50"
            android:layout_marginTop="48dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="300dp"
            android:fontFamily="@font/bernard_mt_condensed"/>


</androidx.constraintlayout.widget.ConstraintLayout>