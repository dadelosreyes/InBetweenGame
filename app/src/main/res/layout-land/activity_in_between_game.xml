<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg"
        tools:context=".InBetweenGame"
        android:soundEffectsEnabled="false">

    <Button
            android:text="@string/Higher"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/higher"
            android:background="@drawable/ic_bet"
            app:layout_constraintStart_toEndOf="@+id/lower"
            android:layout_marginStart="64dp"
            android:fontFamily="@font/bernard_mt_condensed"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/bet_popup"
            android:layout_marginTop="24dp"
            android:visibility="invisible" app:layout_constraintBottom_toTopOf="@+id/guideline3"
            app:layout_constraintVertical_bias="0.0"/>
    <Button
            android:text="@string/Lower"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/lower"
            android:background="@drawable/ic_show"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="300dp"
            android:fontFamily="@font/bernard_mt_condensed"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/bet_popup"
            android:layout_marginTop="24dp"
            android:visibility="invisible" app:layout_constraintBottom_toTopOf="@+id/guideline3"
            app:layout_constraintVertical_bias="0.0"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bet_popup"
            android:text="@string/set_your_bet"
            android:fontFamily="@font/bernard_mt_condensed"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:background="@null"
            app:layout_constraintTop_toBottomOf="@+id/playerCard"
            app:layout_constraintBottom_toTopOf="@+id/reveal"
            app:layout_constraintVertical_bias="0.605"
            app:layout_constraintEnd_toEndOf="@+id/fold"
            app:layout_constraintStart_toStartOf="@+id/bet"
    />
    <Button
            android:id="@+id/fold"
            android:text="@string/fold"
            android:textColor="@color/white"
            android:fontFamily="@font/bernard_mt_condensed"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/ic_fold"
            app:layout_constraintStart_toEndOf="@+id/reveal"
            android:layout_marginStart="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.023"
            app:layout_constraintTop_toTopOf="@+id/reveal" app:layout_constraintBottom_toTopOf="@+id/guideline3"
            app:layout_constraintVertical_bias="0.0"/>
    <Button
            android:id="@+id/reveal"
            android:text="@string/reveal"
            android:textColor="@color/white"
            android:fontFamily="@font/bernard_mt_condensed"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/ic_show"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/playerCard"
            android:layout_marginTop="108dp" app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintBottom_toTopOf="@+id/guideline3" app:layout_constraintVertical_bias="0.0"/>
    <Button
            android:id="@+id/bet"
            android:text="@string/bet"
            android:textColor="@color/white"
            android:fontFamily="@font/bernard_mt_condensed"
            android:background="@drawable/ic_bet"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:layout_constraintEnd_toStartOf="@+id/reveal"
            android:layout_marginEnd="48dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintTop_toTopOf="@+id/reveal" app:layout_constraintBottom_toTopOf="@+id/guideline3"
            app:layout_constraintVertical_bias="0.0"/>
    <ImageView
            android:layout_width="88dp"
            android:layout_height="93dp"
            app:srcCompat="@drawable/back"
            android:id="@+id/firstCard"

            android:contentDescription="@string/description1"
            app:layout_constraintEnd_toStartOf="@+id/playerCard"
            android:layout_marginEnd="48dp"
            app:layout_constraintTop_toTopOf="@+id/playerCard"/>
    <ImageView
            android:layout_width="88dp"
            android:layout_height="93dp"
            app:srcCompat="@drawable/back"
            android:id="@+id/playerCard"
            android:contentDescription="@string/description1"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="88dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
            android:layout_width="88dp"
            android:layout_height="93dp"
            app:srcCompat="@drawable/back"
            android:id="@+id/secondCard"
            android:contentDescription="@string/description1"
            app:layout_constraintStart_toEndOf="@+id/playerCard"
            android:layout_marginStart="48dp"
            app:layout_constraintTop_toTopOf="@+id/playerCard"/>
    <TextView
            android:text="@string/pocket_value"
            android:fontFamily="@font/bernard_mt_condensed"
            android:layout_width="156dp"
            android:layout_height="35dp"
            android:textColor="@color/white"
            android:id="@+id/pocket"
            android:textSize="24sp"
            android:textAlignment="textStart"
            app:drawableStartCompat="@drawable/coinbagresized"
            android:drawablePadding="10dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="44dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.024"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline3" app:layout_constraintGuide_begin="377dp"
                                                android:orientation="horizontal"/>


</androidx.constraintlayout.widget.ConstraintLayout>