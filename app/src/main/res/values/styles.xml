<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowFullscreen">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppTheme.popup" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/colorTransparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <style name="setBet">
        <item name="android:fontFamily">@font/bernard_mt_condensed</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:text">@string/set_bet</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Clear">
        <item name="android:fontFamily">@font/bernard_mt_condensed</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:text">@string/clear</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="pocketValue">
        <item name="android:fontFamily">@font/bernard_mt_condensed</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">36sp</item>
        <item name="android:text">@string/pocket_value</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>